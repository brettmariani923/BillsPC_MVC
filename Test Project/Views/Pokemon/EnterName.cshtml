@model StatFinder.Models.PokemonInfo

@{
    ViewData["Title"] = "Enter Pokémon Name";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EnterName" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="mt-3">
    <form asp-controller="Pokemon" asp-action="ReturnAllPokemon" method="get">
        <button type="submit" class="btn btn-secondary">Search All Pokémon</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
